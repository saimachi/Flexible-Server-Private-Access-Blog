{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "MySQLPassword": {
            "type": "securestring",
            "defaultValue": "Password.1!!",
            "metadata": {
                "description": "Administrator login for MySQL."
            }
        },
        "UniqueSuffix": {
            "type": "string",
            "metadata": {
                "description": "Unique suffix for globally-scoped Azure resources."
            }
        }
    },
    "functions": [],
    "variables": {
        "HubVNetName": "[toLower(concat('vnet-hub-prod-', resourceGroup().location))]",
        "SpokeVNetName": "[toLower(concat('vnet-app-spoke-prod-', resourceGroup().location, '-001'))]",
        
        "HubToSpokePeering": "[concat(variables('HubVNetName'), '/link-', variables('SpokeVNetName'))]",
        "SpokeToHubPeering": "[concat(variables('SpokeVNetName'), '/link-', variables('HubVNetName'))]",

        "AppTrafficNSGName": "nsg-sqlallow-prod-001",

        "AppServerSubnetName": "snet-appserver-prod-001",
        "ApplicationGatewaySubnetName": "snet-appagw-prod-001",
        
        "AppASGName": "asg-appserver-prod",
        "SqlASGName": "asg-appsql-prod",

        "MySQLPrivateEndpoint": "pe-mysql-prod-001",
        "MySQLPrivateEndpointSubnet": "snet-pe-mysql-prod-001",

        "MySQLInstanceName": "[concat('mysql-prod-001-', parameters('UniqueSuffix'))]",
        "MySQLUserName": "demouser",

        "PrivateDNSZoneName": "privatelink.database.azure.com",
        "PrivateDNSZoneSubnetLinkName": "[concat(variables('PrivateDNSZoneName'), '/link-', variables('MySQLPrivateEndpointSubnet'))]",
        "PrivateDNSZoneGroupName": "[concat(variables('MySQLPrivateEndpoint'), '/group-mysql-pe')]"
    },
    "resources": [
        {
            "name": "[variables('HubVNetName')]",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2019-11-01",
            "location": "[resourceGroup().location]",
            "tags": {
            },
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "10.0.0.0/16"
                    ]
                }
            }
        },
        {
            "name": "[variables('SpokeVNetName')]",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2019-11-01",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkSecurityGroups', variables('AppTrafficNSGName'))]"
            ],
            "tags": {
            },
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "10.1.0.0/16"
                    ]
                },
                "subnets": [
                    {
                        "name": "[variables('AppServerSubnetName')]",
                        "properties": {
                            "addressPrefix": "10.1.0.0/24"
                            // "networkSecurityGroup": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('AppTrafficNSGName'))]"
                        }
                    },
                    {
                        "name": "[variables('MySQLPrivateEndpointSubnet')]",
                        "properties": {
                            "addressPrefix": "10.1.1.0/24",
                            "privateEndpointNetworkPolicies": "Disabled"
                            // "networkSecurityGroup": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('AppTrafficNSGName'))]"
                        }
                    },
                    {
                        "name": "[variables('ApplicationGatewaySubnetName')]",
                        "properties": {
                            "addressPrefix": "10.1.2.0/24"
                        }
                    }
                ]
            }
        },
        {
            "name": "[variables('AppTrafficNSGName')]",
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2019-11-01",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/applicationSecurityGroups', variables('AppASGName'))]",
                "[resourceId('Microsoft.Network/applicationSecurityGroups', variables('SqlASGName'))]"
            ],
            "properties": {
                "securityRules": [
                    {
                        "name": "AllowSqlAccess",
                        "properties": {
                            "description": "Allow App Server to access MySQL.",
                            "protocol": "Tcp",
                            "sourcePortRange": "*",
                            "destinationPortRange": "3306",
                            "sourceApplicationSecurityGroups": [
                                {
                                    "id": "[resourceId('Microsoft.Network/applicationSecurityGroups', variables('AppASGName'))]"
                                }
                            ],
                            "destinationApplicationSecurityGroups": [
                                {
                                    "id": "[resourceId('Microsoft.Network/applicationSecurityGroups', variables('SqlASGName'))]"
                                }
                            ],
                            "access": "Allow",
                            "direction": "Inbound",
                            "priority": 100
                        }
                    }
                ]
            }
        },
        {
            "name": "[variables('AppASGName')]",
            "type": "Microsoft.Network/applicationSecurityGroups",
            "apiVersion": "2019-11-01",
            "location": "[resourceGroup().location]",
            "tags": {
            },
            "properties": {
            }
        },
        {
            "name": "[variables('SqlASGName')]",
            "type": "Microsoft.Network/applicationSecurityGroups",
            "apiVersion": "2019-11-01",
            "location": "[resourceGroup().location]",
            "tags": {
            },
            "properties": {
            }
        },
        {
            "name": "[variables('HubToSpokePeering')]",
            "type": "Microsoft.Network/virtualNetworks/virtualNetworkPeerings",
            "apiVersion": "2019-11-01",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', variables('HubVNetName'))]",
                "[resourceId('Microsoft.Network/virtualNetworks', variables('SpokeVNetName'))]"
            ],
            "properties": {
                "allowVirtualNetworkAccess": true,
                "allowForwardedTraffic": false,
                "allowGatewayTransit": false,
                "useRemoteGateways": false,
                "remoteVirtualNetwork": {
                    "id": "[resourceId('Microsoft.Network/virtualNetworks', variables('SpokeVNetName'))]"
                }
            }
        },
        {
            "name": "[variables('SpokeToHubPeering')]",
            "type": "Microsoft.Network/virtualNetworks/virtualNetworkPeerings",
            "apiVersion": "2019-11-01",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', variables('HubVNetName'))]",
                "[resourceId('Microsoft.Network/virtualNetworks', variables('SpokeVNetName'))]"
            ],
            "properties": {
                "allowVirtualNetworkAccess": true,
                "allowForwardedTraffic": false,
                "allowGatewayTransit": false,
                "useRemoteGateways": false,
                "remoteVirtualNetwork": {
                    "id": "[resourceId('Microsoft.Network/virtualNetworks', variables('HubVNetName'))]"
                }
            }
        },
        {
            "type": "Microsoft.Network/privateEndpoints",
            "apiVersion": "2020-06-01",
            "name": "[variables('MySQLPrivateEndpoint')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.DBforMySQL/servers', variables('MySQLInstanceName'))]",
                "[resourceId('Microsoft.Network/virtualNetworks', variables('SpokeVNetName'))]"
            ],
            "properties": {
                "subnet": {
                    "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('SpokeVNetName'), variables('MySQLPrivateEndpointSubnet'))]"
                },
                "privateLinkServiceConnections": [
                    {
                        "name": "[variables('MySQLPrivateEndpoint')]",
                        "properties": {
                            "privateLinkServiceId": "[resourceId('Microsoft.DBforMySQL/servers', variables('MySQLInstanceName'))]",
                            "groupIds": [
                                "mysqlServer"
                            ]
                        }
                    }
                ]
            }   
        },
        {
            "type": "Microsoft.Network/privateEndpoints/privateDnsZoneGroups",
            "apiVersion": "2020-11-01",
            "location": "[resourceGroup().location]",
            "name": "[variables('PrivateDNSZoneGroupName')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/privateEndpoints', variables('MySQLPrivateEndpoint'))]",
                "[resourceId('Microsoft.Network/privateDnsZones', variables('PrivateDNSZoneName'))]"
            ],
            "properties": {
                "privateDnsZoneConfigs": [
                    {
                        "name": "Config1",
                        "properties": {
                            "privateDnsZoneId": "[resourceId('Microsoft.Network/privateDnsZones', variables('PrivateDNSZoneName'))]"
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/privateDnsZones",
            "apiVersion": "2018-09-01",
            "name": "[variables('PrivateDNSZoneName')]",
            "location": "global",
            "properties": {}
        },
        {
            "type": "Microsoft.Network/privateDnsZones/virtualNetworkLinks",
            "apiVersion": "2018-09-01",
            "name": "[variables('PrivateDNSZoneSubnetLinkName')]",
            "location": "global",
            "dependsOn": [
                "[resourceId('Microsoft.Network/privateDnsZones', variables('PrivateDNSZoneName'))]",
                "[resourceId('Microsoft.Network/virtualNetworks', variables('SpokeVNetName'))]"
            ],
            "properties": {
                "registrationEnabled": false,
                "virtualNetwork": {
                    "id": "[resourceId('Microsoft.Network/virtualNetworks', variables('SpokeVNetName'))]"
                }
            }
        },
        {
            "name": "[variables('MySQLInstanceName')]",
            "type": "Microsoft.DBforMySQL/servers",
            "apiVersion": "2017-12-01",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "GP_Gen5_2"
            },
            "properties": {
                "administratorLogin": "[variables('MySQLUserName')]",
                "administratorLoginPassword": "[parameters('MySQLPassword')]",
                "createMode": "Default"
            }
        }
    ],
    "outputs": {}
}